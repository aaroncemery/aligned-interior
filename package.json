{
  "name": "aligned-interior",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/frontend/**/*.{js,jsx,mjs,ts,tsx,md}": [
      "cd apps/frontend && prettier --write"
    ],
    "apps/studio/**/*.{js,jsx,mjs,ts,tsx,md}": [
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,mjs,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.6.4",
  "engines": {
    "node": ">=20"
  }
}
